<!DOCTYPE html>
<html lang="en">
    <%- include('header'); -%>
    <body>
        <h1><%= listTitle %></h1>
        <div class="box">
            
            <!-- Here -->

            <% newListItems.forEach((items)=>{ %>
                <form action="/delete" method="post">
                    <div class="item">
                        <input type="checkbox" name="checkbox" value="<%= items._id %>" onchange="this.form.submit()"><p><%= items.name %></p>
                    </div>
                    <input type="hidden" name="listName" value="<%= listTitle %>" >
                </form>
            <% }) %>

            <form action="/" method="post">
                <input type="text" name="item" id="" autocomplete="off">
                <button type="submit" name="list" value="<%= listTitle %>">+</button>
            </form>
        </div>
    </body>
</html>